<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context=".HobbylistMainActivity"
    android:weightSum="1"
    android:background="@mipmap/logo">

    <Button
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_movies"
        android:id="@+id/btn_movies"
        android:layout_marginTop="180dp"
        android:onClick="IrAMovies"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_books"
        android:id="@+id/btn_books"
        android:layout_marginTop="20dp"
        android:onClick="IrABooks"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_games"
        android:id="@+id/btn_games"
        android:layout_marginTop="20dp"
        android:onClick="IrAGames"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_messages"
        android:id="@+id/btn_messages"
        android:layout_marginTop="20dp"
        android:onClick="IrAMessages"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
